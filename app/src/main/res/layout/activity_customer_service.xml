<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_ninja"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.geartocare.ManageMechanicP.Activities.CustomerServiceActivity"
    tools:openDrawer="start">


    <ScrollView
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.geartocare.ManageMechanicP.Activities.UserProfileActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <!--total and used-->


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/theme_2"
                android:elevation="-1dp"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/customer" />

                <TextView
                    android:id="@+id/cust_add_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/profile_image"
                    android:fontFamily="@font/montserrat"
                    android:includeFontPadding="false"
                    android:text="Add Service"
                    android:textColor="@color/black"
                    android:textFontWeight="900"
                    android:textSize="35sp" />


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:padding="10dp">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/serviceDateL"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"


                    android:hint="Date">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/FirstNameRegister"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:cursorVisible="false"


                        android:focusable="false"


                        android:focusableInTouchMode="false"
                        android:inputType="date" />


                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/serviceTimeL"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"

                    android:hint="Time">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/phoneRegister"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="time" />

                </com.google.android.material.textfield.TextInputLayout>


                <!--User Name-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/serviceCompany"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:hint="Company">


                    <com.google.android.material.textfield.TextInputEditText

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:singleLine="true" />

                </com.google.android.material.textfield.TextInputLayout>


                <!--User Name-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/serviceModel"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:hint="Model">


                    <com.google.android.material.textfield.TextInputEditText

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:singleLine="true" />

                </com.google.android.material.textfield.TextInputLayout>


                <!--User Name-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/serviceVehicleNoL"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:hint="Vehicle no.">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/LastNameRegister"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:inputType="textCapCharacters"
                        android:singleLine="true" />

                </com.google.android.material.textfield.TextInputLayout>

   <!--User Name-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/serviceCost"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:hint="Cost in rupees">


                    <com.google.android.material.textfield.TextInputEditText

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:singleLine="true" />

                </com.google.android.material.textfield.TextInputLayout>


                <!--Email-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/serviceAddressL"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_marginTop="10dp"
                    android:hint="Address">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/emailRegsiter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:focusable="false"
                        android:inputType="textPostalAddress" />

                </com.google.android.material.textfield.TextInputLayout>


                <!--Phone-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"


                    android:padding="20dp">


                    <androidx.appcompat.widget.AppCompatButton

                        android:id="@+id/addService"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@color/black"

                        android:text="Add Service"

                        android:textColor="@color/white" />


                    <!-- <androidx.appcompat.widget.AppCompatButton

                         android:id="@+id/listService"
                         android:textColor="@color/white"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:background="@color/black"

                         android:layout_margin="10dp"

                         android:text="List Service"/>-->


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>